<br>
Category: <%= @job.category.title %>
<br>

Title: <%= @job.title %>
<br>

Description: <%= @job.description %>
<br>

Level of Interest: <%= @job.level_of_interest %>
<br>

City: <%= @job.city %>
<br>

Company: <%= link_to @job.company.name, company_path(@job.company) %>

<div class="company_<%= @job.company_id %>">
  <%= link_to "Delete", company_job_path(@job), method: "delete" %>
  <%= link_to "Edit", edit_company_job_path(@job) %>
</div>
<br>


<%= form_for [@job, @comment] do |f| %>
  <%= f.label :content, "Comment" %>
  <%= f.text_field :content %>

  <%= f.submit %>
<% end %>
<br>
<h3>Comments:</h3>

<% @job.comments.reverse.each_with_index do |comment, i| %>
  <%= comment.content %><br><br>
<% end %>


<br>  

<%= link_to "View All #{@job.company.name} Jobs", company_jobs_path(@job.company) %>